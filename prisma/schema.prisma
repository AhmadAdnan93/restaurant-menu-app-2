generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  categories Category[]
  qrCode     String   @unique @default(cuid())
  
  @@index([slug])
  @@index([qrCode])
}

model Category {
  id           String   @id @default(cuid())
  name         String
  description  String?
  order        Int      @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  menuItems    MenuItem[]
  
  @@index([restaurantId])
  @@index([order])
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String?
  order       Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  ratings     Rating[]
  
  @@index([categoryId])
  @@index([order])
}

model Rating {
  id         String   @id @default(cuid())
  value      Int      // 1-5
  comment    String?
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  
  @@index([menuItemId])
}

